// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
}

// Note: Super Admin is ENV-only (SUPER_ADMIN_EMAIL), not stored in database

// Admins collection (created by Super Admin)
model Admin {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  name       String
  phone      String    // Mobile number (required)
  role       String    @default("admin")
  status     String    @default("pending") // pending → active after first login
  createdBy  String    // Email of Super Admin who created this admin
  isActive   Boolean   @default(true)
  otp        String?
  otpExpires DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("admins")
}

// Users collection (created by Admins)
model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  name       String
  phone      String    // Mobile number (required)
  userId     String?   @unique // User ID for login
  role       UserRole  @default(USER)
  status     String    @default("pending") // pending → active after first login
  createdBy  String    // Email of Admin who created this user
  otp        String?
  otpExpires DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("users")
}
